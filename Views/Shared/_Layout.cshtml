@using CyberRiskApp.Models
@using CyberRiskApp.Extensions
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Better Than Spreadsheets GRC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <!-- Bootstrap 5 theme for Select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyberRiskApp.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-chart-line me-2"></i>Better Than Spreadsheets GRC
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <!-- 🏠 Home Dashboard -->
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Dashboard" asp-action="Index" title="Main dashboard with overview of all activities">
                                    <i class="fas fa-home me-1"></i>Home
                                </a>
                            </li>

                            <!-- 🚨 Security Operations -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="securityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Security findings, vulnerabilities, and incident tracking">
                                    <i class="fas fa-shield-alt me-1"></i>Security
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="securityDropdown">
                                    <li><h6 class="dropdown-header"><i class="fas fa-exclamation-triangle me-1"></i>Findings & Issues</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Findings" asp-action="Index">
                                            <i class="fas fa-list me-1"></i>Security Findings
                                            <small class="text-muted d-block">View all security issues</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="FindingClosure" asp-action="Index">
                                            <i class="fas fa-check-circle me-1"></i>Closure Requests
                                            <small class="text-muted d-block">Track finding closures</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="FindingClosure" asp-action="Create">
                                            <i class="fas fa-plus me-1"></i>Request Closure
                                            <small class="text-muted d-block">Close a security finding</small>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- 🎯 Risk Management -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="riskDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Risk assessments, register, and workflow management">
                                    <i class="fas fa-bullseye me-1"></i>Risk Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="riskDropdown">
                                    <li><h6 class="dropdown-header"><i class="fas fa-list me-1"></i>Risk Overview</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Risks" asp-action="Index">
                                            <i class="fas fa-clipboard-list me-1"></i>Risk Register
                                            <small class="text-muted d-block">All identified risks</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="RiskAssessments" asp-action="Index">
                                            <i class="fas fa-chart-bar me-1"></i>Risk Assessments
                                            <small class="text-muted d-block">Conduct & review assessments</small>
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin") || User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || (User.Identity.IsAuthenticated && User.GetUserRole() == CyberRiskApp.Models.UserRole.Admin))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="RiskBacklog" asp-action="Index">
                                                <i class="fas fa-tasks me-1"></i>Risk Workflow
                                                <small class="text-muted d-block">Approve & assign risks</small>
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header"><i class="fas fa-cog me-1"></i>Tools & Templates</h6></li>
                                    @* Assessment Templates menu item hidden per user request
                                    <li>
                                        <a class="dropdown-item" asp-controller="AttackChain" asp-action="Index">
                                            <i class="fas fa-file-alt me-1"></i>Assessment Templates
                                            <small class="text-muted d-block">Risk scenario templates</small>
                                        </a>
                                    </li>
                                    *@
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header"><i class="fas fa-handshake me-1"></i>Risk Acceptance</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Requests" asp-action="CreateAcceptance">
                                            <i class="fas fa-plus me-1"></i>Request Acceptance
                                            <small class="text-muted d-block">Accept business risk</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Requests" asp-action="Index">
                                            <i class="fas fa-inbox me-1"></i>All Requests
                                            <small class="text-muted d-block">View all risk requests</small>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- 📋 Compliance & Governance -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="complianceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Compliance assessments, governance, and regulatory frameworks">
                                    <i class="fas fa-balance-scale me-1"></i>Compliance
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="complianceDropdown">
                                    <li><h6 class="dropdown-header"><i class="fas fa-tachometer-alt me-1"></i>Dashboards</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Governance" asp-action="Index">
                                            <i class="fas fa-building me-1"></i>Governance Overview
                                            <small class="text-muted d-block">Organizational compliance</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Governance" asp-action="AssessmentDashboard">
                                            <i class="fas fa-th-large me-1"></i>Assessment Progress
                                            <small class="text-muted d-block">Track all assessments</small>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header"><i class="fas fa-check-square me-1"></i>Assessments</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ComplianceAssessments" asp-action="Index">
                                            <i class="fas fa-clipboard-check me-1"></i>Compliance Assessments
                                            <small class="text-muted d-block">ISO27001, SOX, GDPR, etc.</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="MaturityAssessments" asp-action="Index">
                                            <i class="fas fa-chart-line me-1"></i>Maturity Assessments
                                            <small class="text-muted d-block">NIST CSF, C2M2 maturity</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ThirdParties" asp-action="Index">
                                            <i class="fas fa-handshake me-1"></i>Third Party Reviews
                                            <small class="text-muted d-block">Vendor risk assessments</small>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Strategy" asp-action="Index">
                                            <i class="fas fa-road me-1"></i>Strategic Planning
                                            <small class="text-muted d-block">Roadmap & initiatives</small>
                                        </a>
                                    </li>
                                    @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header"><i class="fas fa-cogs me-1"></i>Configuration</h6></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Frameworks" asp-action="Index">
                                                <i class="fas fa-book me-1"></i>Compliance Frameworks
                                                <small class="text-muted d-block">Manage frameworks</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="MaturityFrameworks" asp-action="Index">
                                                <i class="fas fa-chart-area me-1"></i>Maturity Frameworks
                                                <small class="text-muted d-block">Configure maturity models</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Organizations" asp-action="Index">
                                                <i class="fas fa-sitemap me-1"></i>Organizations
                                                <small class="text-muted d-block">Manage org structure</small>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- 📊 Executive Reports -->
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="CISOExecutive" asp-action="Index" title="Executive dashboards and reports for leadership">
                                    <i class="fas fa-chart-pie me-1"></i>Reports
                                </a>
                            </li>

                            <!-- 💼 My Work - For GRC Users and Admins -->
                            @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="MyWork" asp-action="Index" title="Your assigned tasks and work items">
                                        <i class="fas fa-briefcase me-1"></i>My Work
                                    </a>
                                </li>
                            }

                            <!-- 🔧 System Administration - Only for Admin -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="System administration and configuration">
                                        <i class="fas fa-cog me-1"></i>Settings
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><h6 class="dropdown-header"><i class="fas fa-users me-1"></i>User Management</h6></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="UserManagement" asp-action="Index">
                                                <i class="fas fa-user-cog me-1"></i>Manage Users
                                                <small class="text-muted d-block">Add, edit, and assign roles</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="RequestManagement" asp-action="Index">
                                                <i class="fas fa-inbox me-1"></i>Request Queue
                                                <small class="text-muted d-block">Approve user requests</small>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header"><i class="fas fa-sliders-h me-1"></i>Risk Configuration</h6></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="RiskLevelSettings" asp-action="Index">
                                                <i class="fas fa-thermometer-half me-1"></i>Risk Levels
                                                <small class="text-muted d-block">Configure risk scoring</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="RiskMatrix" asp-action="Index">
                                                <i class="fas fa-th me-1"></i>Risk Matrix
                                                <small class="text-muted d-block">Impact & likelihood matrix</small>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header"><i class="fas fa-database me-1"></i>Data Management</h6></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ReferenceDataManagement" asp-action="Index">
                                                <i class="fas fa-list me-1"></i>Reference Data
                                                <small class="text-muted d-block">Manage lookup values</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="AttackChain" asp-action="MitreDataManagement">
                                                <i class="fas fa-shield-alt me-1"></i>MITRE ATT&CK
                                                <small class="text-muted d-block">Update threat intelligence</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="DataFix" asp-action="Index">
                                                <i class="fas fa-wrench me-1"></i>Data Repair
                                                <small class="text-muted d-block">Fix data issues</small>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header"><i class="fas fa-server me-1"></i>System</h6></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="AppSettings" asp-action="Index">
                                                <i class="fas fa-globe me-1"></i>Domain Settings
                                                <small class="text-muted d-block">Application configuration</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="SSLManagement" asp-action="Index">
                                                <i class="fas fa-lock me-1"></i>SSL Certificates
                                                <small class="text-muted d-block">Manage security certificates</small>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Backup" asp-action="Index">
                                                <i class="fas fa-download me-1"></i>Backup & Restore
                                                <small class="text-muted d-block">System backup operations</small>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        <!-- User Info and Logout -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>
                                    @User.Identity?.Name
                                    <small class="text-muted">(@User.GetUserRoleDisplayName())</small>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user-edit me-1"></i>Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Better Than Spreadsheets GRC- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Load Select2 from local files -->
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/js/smart-combobox.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>