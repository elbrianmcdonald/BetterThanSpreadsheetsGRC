@model CyberRiskApp.Models.ThirdParty
@using CyberRiskApp.Models
@{
    ViewData["Title"] = "Third Party Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4><i class="fas fa-info-circle me-2"></i>Third Party Details: @Model.Name</h4>
                </div>
                <div class="card-body">
                    <!-- Basic Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">Basic Information</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Third Party Name</label>
                                <p class="form-control-plaintext">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Organization</label>
                                <p class="form-control-plaintext">@Model.Organization</p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Description</label>
                                    <p class="form-control-plaintext">@Model.Description</p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Contact Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">Contact Information</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Representative Email</label>
                                <p class="form-control-plaintext">
                                    <a href="mailto:@Model.RepresentativeEmail" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i>@Model.RepresentativeEmail
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">TPRA Link</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.TPRAHyperlink))
                                    {
                                        <a href="@Model.TPRAHyperlink" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-external-link-alt me-1"></i>View TPRA Document
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No TPRA link provided</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Risk Assessment -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">Risk Assessment</h5>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">TPRA Status</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-@GetTPRAStatusColor(Model.TPRAStatus) fs-6">@Model.TPRAStatus</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Risk Level</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-@GetRiskLevelColor(Model.RiskLevel) fs-6">@Model.RiskLevel</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">BIA Rating</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-@GetBIARatingColor(Model.BIARating) fs-6">@Model.BIARating</span>
                                    <br><small class="text-muted">Business Impact Analysis Rating</small>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-secondary border-bottom pb-2">Audit Information</h5>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Created At</label>
                                <p class="form-control-plaintext">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Created By</label>
                                <p class="form-control-plaintext">@(Model.CreatedBy ?? "System")</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Updated At</label>
                                <p class="form-control-plaintext">@Model.UpdatedAt.ToString("MM/dd/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Updated By</label>
                                <p class="form-control-plaintext">@(Model.UpdatedBy ?? "System")</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Third Party Register
                        </a>
                        <div>
                            @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                    <i class="fas fa-edit me-1"></i>Edit Third Party
                                </a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete third party @Model.Name? This action cannot be undone.');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetTPRAStatusColor(TPRAStatus status)
    {
        return status switch
        {
            TPRAStatus.NotStarted => "secondary",
            TPRAStatus.InProgress => "primary",
            TPRAStatus.UnderReview => "info",
            TPRAStatus.Completed => "success",
            TPRAStatus.Expired => "danger",
            TPRAStatus.Exempted => "warning",
            _ => "secondary"
        };
    }

    private string GetRiskLevelColor(RiskLevel level)
    {
        return level switch
        {
            RiskLevel.Critical => "danger",
            RiskLevel.High => "warning",
            RiskLevel.Medium => "info",
            RiskLevel.Low => "success",
            _ => "secondary"
        };
    }

    private string GetBIARatingColor(BIARating rating)
    {
        return rating switch
        {
            BIARating.Critical => "danger",
            BIARating.High => "warning",
            BIARating.Medium => "info",
            BIARating.Low => "success",
            BIARating.VeryLow => "success",
            _ => "secondary"
        };
    }
}