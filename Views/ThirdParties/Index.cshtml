@model CyberRiskApp.ViewModels.ThirdPartyFilterViewModel
@using CyberRiskApp.Models
@{
    ViewData["Title"] = "Third Party Risk Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-handshake me-2"></i>Third Party Risk Management</h2>
        <div>
            <a asp-action="Create" class="btn btn-success me-2">
                <i class="fas fa-plus me-2"></i>Add Third Party
            </a>
            <a asp-action="ExportToExcel" class="btn btn-outline-success">
                <i class="fas fa-file-excel me-2"></i>Export to Excel
            </a>
        </div>
    </div>

    <!-- Filter Panel -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#filterPanel" aria-expanded="false">
                    <i class="fas fa-filter me-2"></i>Filter Third Parties (@Model.FilteredCount of @Model.TotalCount)
                </button>
            </h5>
        </div>
        <div class="collapse" id="filterPanel">
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Third Party Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Search by name..." />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Organization</label>
                            <select asp-for="Organization" asp-items="Model.OrganizationOptions" class="form-select">
                                <option value="">All Organizations</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Representative Email</label>
                            <input asp-for="RepresentativeEmail" class="form-control" placeholder="Search by email..." />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">TPRA Status</label>
                            <select asp-for="TPRAStatus" asp-items="Model.TPRAStatusOptions" class="form-select">
                                <option value="">All Status</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Risk Level</label>
                            <select asp-for="RiskLevel" asp-items="Model.RiskLevelOptions" class="form-select">
                                <option value="">All Risk Levels</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">BIA Rating</label>
                            <select asp-for="BIARating" asp-items="Model.BIARatingOptions" class="form-select">
                                <option value="">All BIA Ratings</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3 d-flex align-items-end">
                            <div class="w-100">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search me-1"></i>Apply Filters
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Clear Filters
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results -->
    @if (Model.FilteredThirdParties.Any())
    {
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">Third Party Register (@Model.FilteredCount third parties)</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Organization</th>
                                <th>Representative</th>
                                <th>TPRA Status</th>
                                <th>Risk Level</th>
                                <th>BIA Rating</th>
                                <th>TPRA Link</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var thirdParty in Model.FilteredThirdParties)
                            {
                                <tr>
                                    <td><strong>@thirdParty.Name</strong></td>
                                    <td>@thirdParty.Organization</td>
                                    <td>
                                        <a href="mailto:@thirdParty.RepresentativeEmail" class="text-decoration-none">
                                            <i class="fas fa-envelope me-1"></i>@thirdParty.RepresentativeEmail
                                        </a>
                                    </td>
                                    <td><span class="badge bg-@GetTPRAStatusColor(thirdParty.TPRAStatus)">@thirdParty.TPRAStatus</span></td>
                                    <td><span class="badge bg-@GetRiskLevelColor(thirdParty.RiskLevel)">@thirdParty.RiskLevel</span></td>
                                    <td><span class="badge bg-@GetBIARatingColor(thirdParty.BIARating)">@thirdParty.BIARating</span></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(thirdParty.TPRAHyperlink))
                                        {
                                            <a href="@thirdParty.TPRAHyperlink" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@thirdParty.CreatedAt.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@thirdParty.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@thirdParty.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <form asp-action="Delete" asp-route-id="@thirdParty.Id" method="post" style="display:inline;" 
                                                      onsubmit="return confirm('Are you sure you want to delete third party @thirdParty.Name? This action cannot be undone.');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Third Party">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-handshake fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No third parties found</h5>
            <p class="text-muted">@(Model.TotalCount == 0 ? "No third parties have been created yet." : "Try adjusting your filter criteria.")</p>
            @if (Model.TotalCount == 0)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Create First Third Party
                </a>
            }
        </div>
    }
</div>

@functions {
    private string GetTPRAStatusColor(TPRAStatus status)
    {
        return status switch
        {
            TPRAStatus.NotStarted => "secondary",
            TPRAStatus.InProgress => "primary",
            TPRAStatus.UnderReview => "info",
            TPRAStatus.Completed => "success",
            TPRAStatus.Expired => "danger",
            TPRAStatus.Exempted => "warning",
            _ => "secondary"
        };
    }

    private string GetRiskLevelColor(RiskLevel level)
    {
        return level switch
        {
            RiskLevel.Critical => "danger",
            RiskLevel.High => "warning",
            RiskLevel.Medium => "info",
            RiskLevel.Low => "success",
            _ => "secondary"
        };
    }

    private string GetBIARatingColor(BIARating rating)
    {
        return rating switch
        {
            BIARating.Critical => "danger",
            BIARating.High => "warning",
            BIARating.Medium => "info",
            BIARating.Low => "success",
            BIARating.VeryLow => "success",
            _ => "secondary"
        };
    }
}

<style>
    .table th {
        font-size: 0.85rem;
        font-weight: 600;
        white-space: nowrap;
    }
    
    .table td {
        font-size: 0.85rem;
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75rem;
    }
    
    .btn-group .btn {
        margin-right: 2px;
    }
</style>