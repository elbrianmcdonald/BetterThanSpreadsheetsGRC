@model CyberRiskApp.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "GRC Dashboard";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">GRC Dashboard</h1>
        <a href="@Url.Action("Index", "CISOExecutive")" class="btn btn-primary">
            <i class="fas fa-chart-line me-1"></i>Executive Dashboard
        </a>
    </div>

    @if (ViewBag.CurrentUserInfo != null)
    {
        <div class="alert alert-info">
            @ViewBag.CurrentUserInfo
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <!-- Quick Actions for GRC Users -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-tasks me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "RiskBacklog")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-clipboard-list me-2"></i>Risk Backlog
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Findings")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-bug me-2"></i>Findings Management
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "ComplianceAssessments")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-shield-alt me-2"></i>Compliance Assessments
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "MaturityAssessments")" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-chart-bar me-2"></i>Maturity Assessments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Findings -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Findings</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentFindings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Finding #</th>
                                        <th>Title</th>
                                        <th>Risk</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var finding in Model.RecentFindings)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", "Findings", new { id = finding.Id })">
                                                    @finding.FindingNumber
                                                </a>
                                            </td>
                                            <td>@finding.Title</td>
                                            <td><span class="badge badge-@GetRiskColor(finding.RiskRating)">@finding.RiskRating</span></td>
                                            <td>@finding.Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Findings")" class="btn btn-sm btn-primary">
                                View All Findings
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent findings</p>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Assessment Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Pending Assessment Requests</h6>
                </div>
                <div class="card-body">
                    @if (Model.PendingAssessments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Requester</th>
                                        <th>Scope</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Days Pending</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.PendingAssessments)
                                    {
                                        <tr>
                                            <td>@request.RequesterName</td>
                                            <td>@request.Scope</td>
                                            <td>
                                                <span class="badge badge-@GetPriorityColor(request.Priority)">
                                                    @request.Priority
                                                </span>
                                            </td>
                                            <td>@request.Status</td>
                                            <td>@((DateTime.UtcNow - request.RequestDate).Days)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "RiskBacklog")" class="btn btn-sm btn-primary">
                                View Risk Backlog
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No pending assessment requests</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Risk Workflow Quick Access -->
    @if (User.IsInRole("GRCUser") || User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-success text-white">
                        <h6 class="m-0 font-weight-bold">Risk Workflow Quick Access</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="card border-left-primary">
                                    <div class="card-body">
                                        <h6 class="text-primary">Assessment Requests</h6>
                                        <p class="mb-2">Process new assessment requests and assign assessors.</p>
                                        <a href="@Url.Action("Index", "RiskBacklog", new { status = "unassigned" })" class="btn btn-sm btn-primary">
                                            Process Requests
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-left-warning">
                                    <div class="card-body">
                                        <h6 class="text-warning">Risk Reviews</h6>
                                        <p class="mb-2">Review and approve completed risk assessments.</p>
                                        <a href="@Url.Action("Index", "RiskBacklog", new { status = "review" })" class="btn btn-sm btn-warning">
                                            Review Assessments
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-left-success">
                                    <div class="card-body">
                                        <h6 class="text-success">Risk Register</h6>
                                        <p class="mb-2">View and manage the organizational risk register.</p>
                                        <a href="@Url.Action("Index", "Risks")" class="btn btn-sm btn-success">
                                            Risk Register
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .btn-block {
        width: 100%;
    }
    
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
</style>

@functions {
    private string GetRiskColor(RiskRating rating)
    {
        return rating switch
        {
            RiskRating.Critical => "danger",
            RiskRating.High => "warning",
            RiskRating.Medium => "info",
            RiskRating.Low => "success",
            _ => "secondary"
        };
    }

    private string GetPriorityColor(Priority priority)
    {
        return priority switch
        {
            Priority.Urgent => "danger",
            Priority.High => "warning",
            Priority.Medium => "info",
            Priority.Low => "success",
            _ => "secondary"
        };
    }
}