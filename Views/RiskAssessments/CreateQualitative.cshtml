@model CyberRiskApp.ViewModels.RiskAssessmentViewModel
@{
    ViewData["Title"] = "Create Qualitative Risk Assessment";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-balance-scale text-warning me-2"></i>
                    Create Qualitative Risk Assessment
                    <span class="badge bg-warning text-dark ms-2">Qualitative</span>
                </h2>
                <div>
                    <a asp-action="SelectType" class="btn btn-outline-success me-2">
                        <i class="fas fa-exchange-alt me-1"></i>Change Type
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>

            <form asp-action="CreateQualitative" method="post" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-8">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Assessment Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Assessment.Title" class="form-label">Assessment Title</label>
                                    <input asp-for="Assessment.Title" class="form-control" placeholder="Enter assessment title" required />
                                    <span asp-validation-for="Assessment.Title" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Assessment.Asset" class="form-label">Primary Asset</label>
                                    <input asp-for="Assessment.Asset" class="form-control" placeholder="Enter primary asset being assessed" required />
                                    <span asp-validation-for="Assessment.Asset" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Assessment.BusinessUnit" class="form-label">Business Unit</label>
                                            <input asp-for="Assessment.BusinessUnit" class="form-control" placeholder="Enter business unit" />
                                            <span asp-validation-for="Assessment.BusinessUnit" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Assessment.BusinessOwner" class="form-label">Business Owner</label>
                                            <input asp-for="Assessment.BusinessOwner" class="form-control" placeholder="Enter business owner" />
                                            <span asp-validation-for="Assessment.BusinessOwner" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Assessment.Description" class="form-label">Description</label>
                                    <textarea asp-for="Assessment.Description" class="form-control" rows="3" placeholder="Describe the assessment scope and objectives"></textarea>
                                    <span asp-validation-for="Assessment.Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Assessment.ThreatScenario" class="form-label">Threat Scenario</label>
                                    <textarea asp-for="Assessment.ThreatScenario" class="form-control" rows="3" placeholder="Describe the threat scenario being assessed"></textarea>
                                    <span asp-validation-for="Assessment.ThreatScenario" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow-sm mt-4">
                            <div class="card-header bg-warning">
                                <h5 class="mb-0 text-dark"><i class="fas fa-calculator me-2"></i>Risk Scoring</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Assessment.QualitativeImpact" class="form-label">Impact Level</label>
                                            <select asp-for="Assessment.QualitativeImpact" class="form-select">
                                                <option value="">Select Impact</option>
                                                <option value="1">1 - Very Low</option>
                                                <option value="2">2 - Low</option>
                                                <option value="3">3 - Medium</option>
                                                <option value="4">4 - High</option>
                                                <option value="5">5 - Very High</option>
                                            </select>
                                            <span asp-validation-for="Assessment.QualitativeImpact" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Assessment.QualitativeLikelihood" class="form-label">Likelihood Level</label>
                                            <select asp-for="Assessment.QualitativeLikelihood" class="form-select">
                                                <option value="">Select Likelihood</option>
                                                <option value="1">1 - Very Low</option>
                                                <option value="2">2 - Low</option>
                                                <option value="3">3 - Medium</option>
                                                <option value="4">4 - High</option>
                                                <option value="5">5 - Very High</option>
                                            </select>
                                            <span asp-validation-for="Assessment.QualitativeLikelihood" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Assessment.QualitativeExposure" class="form-label">Exposure Level</label>
                                            <select asp-for="Assessment.QualitativeExposure" class="form-select">
                                                <option value="">Select Exposure</option>
                                                <option value="1">1 - Very Low</option>
                                                <option value="2">2 - Low</option>
                                                <option value="3">3 - Medium</option>
                                                <option value="4">4 - High</option>
                                                <option value="5">5 - Very High</option>
                                            </select>
                                            <span asp-validation-for="Assessment.QualitativeExposure" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Assessment Settings</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Assessment.Status" class="form-label">Status</label>
                                    <select asp-for="Assessment.Status" class="form-select">
                                        <option value="Draft">Draft</option>
                                        <option value="InProgress">In Progress</option>
                                        <option value="UnderReview">Under Review</option>
                                        <option value="Completed">Completed</option>
                                    </select>
                                    <span asp-validation-for="Assessment.Status" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Assessment.CIATriad" class="form-label">CIA Impact</label>
                                    <select asp-for="Assessment.CIATriad" class="form-select">
                                        <option value="">Select Impact Type</option>
                                        <option value="Confidentiality">Confidentiality</option>
                                        <option value="Integrity">Integrity</option>
                                        <option value="Availability">Availability</option>
                                        <option value="Mixed">Mixed</option>
                                    </select>
                                    <span asp-validation-for="Assessment.CIATriad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Create Assessment
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}