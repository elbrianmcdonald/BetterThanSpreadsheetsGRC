@using CyberRiskApp.Extensions
@model IEnumerable<CyberRiskApp.Models.ThreatModel>

@{
    ViewData["Title"] = "Threat Modeling";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-primary mb-0">
                        <i class="fas fa-crosshairs me-2"></i>Advanced Threat Modeling
                    </h2>
                    <p class="text-muted">MITRE ATT&CK v13 & Lockheed Kill Chain Framework</p>
                </div>
                <div>
                    <div class="btn-group me-2" role="group">
                        <button type="button" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-tools me-2"></i>Tools
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Techniques">
                                <i class="fas fa-shield-alt me-2"></i>MITRE Techniques Library
                            </a></li>
                            <li><a class="dropdown-item" asp-action="Analytics">
                                <i class="fas fa-chart-bar me-2"></i>Global Analytics
                            </a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="MitreImport">
                                    <i class="fas fa-database me-2"></i>Import MITRE Data
                                </a></li>
                            }
                        </ul>
                    </div>
                    @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>New Threat Model
                        </a>
                    }
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card border-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title text-primary">Total Models</h5>
                                    <h3 class="mb-0">@Model.Count()</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-shield-alt fa-2x text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-warning">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title text-warning">Draft</h5>
                                    <h3 class="mb-0">@Model.Count(tm => tm.Status == CyberRiskApp.Models.ThreatModelStatus.Draft)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-edit fa-2x text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title text-success">Active</h5>
                                    <h3 class="mb-0">@Model.Count(tm => tm.Status == CyberRiskApp.Models.ThreatModelStatus.Active)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-check-circle fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-danger">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title text-danger">Total Attacks</h5>
                                    <h3 class="mb-0">@Model.Sum(tm => tm.Attacks.Count)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-exclamation-triangle fa-2x text-danger"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Threat Models Table -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Threat Models
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Asset</th>
                                        <th>Business Unit</th>
                                        <th>Status</th>
                                        <th>Attacks</th>
                                        <th>Created By</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var threatModel in Model.OrderByDescending(tm => tm.CreatedAt))
                                    {
                                        <tr class="@(threatModel.Status == CyberRiskApp.Models.ThreatModelStatus.Draft ? "table-warning" :
                                                    threatModel.Status == CyberRiskApp.Models.ThreatModelStatus.Active ? "table-success" :
                                                    threatModel.Status == CyberRiskApp.Models.ThreatModelStatus.InReview ? "table-info" : "")">
                                            <td>@threatModel.Id</td>
                                            <td>
                                                <strong>@threatModel.Name</strong>
                                                @if (!string.IsNullOrEmpty(threatModel.Description))
                                                {
                                                    <br>
                                                    <small class="text-muted">@(threatModel.Description.Length > 100 ? threatModel.Description.Substring(0, 100) + "..." : threatModel.Description)</small>
                                                }
                                            </td>
                                            <td>@threatModel.Asset</td>
                                            <td>@threatModel.BusinessUnit</td>
                                            <td>
                                                @{
                                                    var statusBadge = threatModel.Status switch
                                                    {
                                                        CyberRiskApp.Models.ThreatModelStatus.Draft => "bg-warning text-dark",
                                                        CyberRiskApp.Models.ThreatModelStatus.InReview => "bg-info",
                                                        CyberRiskApp.Models.ThreatModelStatus.Approved => "bg-primary",
                                                        CyberRiskApp.Models.ThreatModelStatus.Active => "bg-success",
                                                        CyberRiskApp.Models.ThreatModelStatus.Archived => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusBadge">@threatModel.Status</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-danger">@threatModel.Attacks.Count</span>
                                                @if (threatModel.Attacks.Any(a => a.RiskLevel == CyberRiskApp.Models.RiskLevel.Critical || a.RiskLevel == CyberRiskApp.Models.RiskLevel.High))
                                                {
                                                    <i class="fas fa-exclamation-triangle text-danger ms-1" title="Contains high-risk attacks"></i>
                                                }
                                            </td>
                                            <td>@threatModel.CreatedBy</td>
                                            <td>@threatModel.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@threatModel.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@threatModel.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="CreateAttack" asp-route-threatModelId="@threatModel.Id" class="btn btn-sm btn-outline-success" title="Add Attack">
                                                            <i class="fas fa-plus"></i>
                                                        </a>
                                                    }
                                                    @if (User.IsUserAdmin())
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Threat Model" 
                                                                onclick="confirmDelete(@threatModel.Id, '@threatModel.Name', '@Html.Raw(Html.Encode(threatModel.Asset).Replace("'", "\\'"))')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-crosshairs fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Threat Models</h5>
                            <p class="text-muted">No threat models have been created yet.</p>
                            @if (User.IsInRole("GRCAnalyst") || User.IsInRole("GRCManager") || User.IsInRole("Admin"))
                            {
                                <a asp-action="Create" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Create First Threat Model
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsUserAdmin())
{
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone! All associated attack scenarios will also be deleted.
                    </div>
                    <p>Are you sure you want to delete the following threat model?</p>
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title" id="deleteThreatModelName"></h6>
                            <p class="card-text">
                                <strong>Asset:</strong> <span id="deleteThreatModelAsset"></span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <form id="deleteForm" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Threat Model
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete(id, name, asset) {
            // Set the form action
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "ThreatModeling")/' + id;
            
            // Set the threat model details in the modal
            document.getElementById('deleteThreatModelName').textContent = name;
            document.getElementById('deleteThreatModelAsset').textContent = asset;
            
            // Show the modal
            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }
    </script>
}