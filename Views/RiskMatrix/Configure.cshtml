@model CyberRiskApp.Models.RiskMatrix
@{
    ViewData["Title"] = "Configure Risk Matrix";
    
    // Organize levels by type for easy access
    var levels = ViewBag.Levels as IEnumerable<CyberRiskApp.Models.RiskMatrixLevel> ?? new List<CyberRiskApp.Models.RiskMatrixLevel>();
    var impactLevels = levels.Where(l => l.LevelType == CyberRiskApp.Models.RiskMatrixLevelType.Impact).OrderBy(l => l.LevelValue).ToList();
    var likelihoodLevels = levels.Where(l => l.LevelType == CyberRiskApp.Models.RiskMatrixLevelType.Likelihood).OrderBy(l => l.LevelValue).ToList();
    var exposureLevels = levels.Where(l => l.LevelType == CyberRiskApp.Models.RiskMatrixLevelType.Exposure).OrderBy(l => l.LevelValue).ToList();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-cog text-primary me-2"></i>
            Configure Risk Matrix: @Model.Name
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <!-- Matrix Info Card -->
    <div class="card mb-4">
        <div class="card-header bg-info bg-opacity-10">
            <h5 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Matrix Information
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Size:</strong> @(Model.MatrixSize)×@(Model.MatrixSize)
                </div>
                <div class="col-md-3">
                    <strong>Type:</strong> 
                    @if (Model.MatrixType == CyberRiskApp.Models.RiskMatrixType.ImpactLikelihood)
                    {
                        <span class="text-primary">2D Matrix</span>
                    }
                    else
                    {
                        <span class="text-info">3D Matrix</span>
                    }
                </div>
                <div class="col-md-3">
                    <strong>Status:</strong> 
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
                <div class="col-md-3">
                    @if (Model.IsDefault)
                    {
                        <span class="badge bg-warning">Default Matrix</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Level Configuration Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary bg-opacity-10">
            <h5 class="mb-0">
                <i class="fas fa-layer-group me-2"></i>Risk Level Configuration
            </h5>
        </div>
        <div class="card-body">
            <form id="levelsForm">
                @Html.AntiForgeryToken()
                <div class="row">
                    <!-- Impact Levels -->
                <div class="col-md-4">
                    <h6 class="text-primary"><i class="fas fa-exclamation-triangle me-2"></i>Impact Levels</h6>
                    <div id="impactLevels">
                        @for (int i = 1; i <= Model.MatrixSize; i++)
                        {
                            var existingLevel = impactLevels.FirstOrDefault(l => Math.Round(l.LevelValue) == i);
                            var levelName = existingLevel?.LevelName ?? $"Level {i}";
                            var levelScore = existingLevel?.LevelValue ?? i;
                            var levelColor = existingLevel?.ColorCode ?? GetDefaultColor(i, Model.MatrixSize);
                            
                            <div class="mb-3 level-config" data-level-type="Impact" data-level-value="@i">
                                <label class="form-label fw-bold">Level @i</label>
                                <div class="row">
                                    <div class="col-4">
                                        <input type="text" class="form-control level-name" placeholder="Enter level name" value="@levelName" />
                                    </div>
                                    <div class="col-4">
                                        <input type="number" class="form-control level-score" placeholder="Score" value="@levelScore" step="0.1" min="0" />
                                        <small class="text-muted">Score/Value</small>
                                    </div>
                                    <div class="col-4">
                                        <input type="color" class="form-control form-control-color level-color" value="#@levelColor" />
                                        <small class="text-muted">Color</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Likelihood Levels -->
                <div class="col-md-4">
                    <h6 class="text-success"><i class="fas fa-percentage me-2"></i>Likelihood Levels</h6>
                    <div id="likelihoodLevels">
                        @for (int i = 1; i <= Model.MatrixSize; i++)
                        {
                            var existingLevel = likelihoodLevels.FirstOrDefault(l => Math.Round(l.LevelValue) == i);
                            var levelName = existingLevel?.LevelName ?? $"Level {i}";
                            var levelScore = existingLevel?.LevelValue ?? i;
                            var levelColor = existingLevel?.ColorCode ?? GetDefaultColor(i, Model.MatrixSize);
                            
                            <div class="mb-3 level-config" data-level-type="Likelihood" data-level-value="@i">
                                <label class="form-label fw-bold">Level @i</label>
                                <div class="row">
                                    <div class="col-4">
                                        <input type="text" class="form-control level-name" placeholder="Enter level name" value="@levelName" />
                                    </div>
                                    <div class="col-4">
                                        <input type="number" class="form-control level-score" placeholder="Score" value="@levelScore" step="0.1" min="0" />
                                        <small class="text-muted">Score/Value</small>
                                    </div>
                                    <div class="col-4">
                                        <input type="color" class="form-control form-control-color level-color" value="#@levelColor" />
                                        <small class="text-muted">Color</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Exposure Levels (3D Only) -->
                @if (Model.MatrixType == CyberRiskApp.Models.RiskMatrixType.ImpactLikelihoodExposure)
                {
                    <div class="col-md-4">
                        <h6 class="text-warning"><i class="fas fa-shield-alt me-2"></i>Exposure Levels</h6>
                        <div id="exposureLevels">
                            @for (int i = 1; i <= Model.MatrixSize; i++)
                            {
                                var existingLevel = exposureLevels.FirstOrDefault(l => Math.Round(l.LevelValue) == i);
                                var levelName = existingLevel?.LevelName ?? $"Level {i}";
                                var levelScore = existingLevel?.Multiplier ?? existingLevel?.LevelValue ?? (i * 0.25m);
                                var levelColor = existingLevel?.ColorCode ?? GetDefaultColor(i, Model.MatrixSize);
                                
                                <div class="mb-3 level-config" data-level-type="Exposure" data-level-value="@i">
                                    <label class="form-label fw-bold">Level @i</label>
                                    <div class="row">
                                        <div class="col-4">
                                            <input type="text" class="form-control level-name" placeholder="Enter level name" value="@levelName" />
                                        </div>
                                        <div class="col-4">
                                            <input type="number" class="form-control level-score" placeholder="Multiplier" value="@levelScore" step="0.1" min="0" />
                                            <small class="text-muted">Multiplier</small>
                                        </div>
                                        <div class="col-4">
                                            <input type="color" class="form-control form-control-color level-color" value="#@levelColor" />
                                            <small class="text-muted">Color</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="mt-4">
                <button type="button" class="btn btn-primary" id="saveLevels">
                    <i class="fas fa-save me-2"></i>Save Level Configuration
                </button>
                <button type="button" class="btn btn-outline-secondary" id="resetLevels">
                    <i class="fas fa-undo me-2"></i>Reset to Defaults
                </button>
            </div>
            </form>
        </div>
    </div>

    <!-- Matrix Preview Section -->
    <div class="card mb-4">
        <div class="card-header bg-success bg-opacity-10">
            <h5 class="mb-0">
                <i class="fas fa-eye me-2"></i>Matrix Preview
            </h5>
        </div>
        <div class="card-body">
            @if (Model.MatrixType == CyberRiskApp.Models.RiskMatrixType.ImpactLikelihoodExposure)
            {
                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-shield-alt me-2 text-warning"></i>Exposure Level for Preview:
                    </label>
                    <select class="form-select" id="exposureSelector" style="max-width: 300px;">
                        <option value="">Select Exposure Level...</option>
                        @for (int i = 1; i <= Model.MatrixSize; i++)
                        {
                            var existingLevel = exposureLevels.FirstOrDefault(l => Math.Round(l.LevelValue) == i);
                            var levelName = existingLevel?.LevelName ?? $"Level {i}";
                            <option value="@i" selected="@(i == 1)">@levelName (Level @i)</option>
                        }
                    </select>
                    <small class="text-muted">Select which exposure level to use for the matrix preview below.</small>
                </div>
            }
            
            <div id="matrixPreview" class="table-responsive">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading matrix preview...</p>
                </div>
            </div>
            
            <div class="mt-4">
                <button type="button" class="btn btn-success" id="generateMatrix">
                    <i class="fas fa-magic me-2"></i>Generate Risk Matrix
                </button>
                <button type="button" class="btn btn-info" id="previewMatrix">
                    <i class="fas fa-eye me-2"></i>Preview Matrix
                </button>
            </div>
        </div>
    </div>

    <!-- Risk Level Mapping Section -->
    <div class="card">
        <div class="card-header bg-warning bg-opacity-10">
            <h5 class="mb-0">
                <i class="fas fa-sliders-h me-2"></i>Risk Level Mapping
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Note:</strong> These thresholds are saved to the global Risk Level Settings and will affect all risk assessments across the system.
            </div>
            
            <form id="thresholdsForm">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-success">Medium Risk Threshold</label>
                            <div class="input-group">
                                <span class="input-group-text">≥</span>
                                <input type="number" class="form-control" id="mediumThreshold" value="4" min="1" step="0.1" />
                            </div>
                            <small class="text-muted">Scores below this are Low risk</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-warning">High Risk Threshold</label>
                            <div class="input-group">
                                <span class="input-group-text">≥</span>
                                <input type="number" class="form-control" id="highThreshold" value="10" min="2" step="0.1" />
                            </div>
                            <small class="text-muted">Below Medium, above this is High</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-danger">Critical Risk Threshold</label>
                            <div class="input-group">
                                <span class="input-group-text">≥</span>
                                <input type="number" class="form-control" id="criticalThreshold" value="16" min="3" step="0.1" />
                            </div>
                            <small class="text-muted">Below High, above this is Critical</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-secondary">Risk Appetite Threshold</label>
                            <div class="input-group">
                                <span class="input-group-text">≤</span>
                                <input type="number" class="form-control" id="riskAppetiteThreshold" value="6" min="1" step="0.1" />
                            </div>
                            <small class="text-muted">Above this level exceeds appetite</small>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="button" class="btn btn-warning" id="saveThresholds">
                        <i class="fas fa-save me-2"></i>Save Risk Thresholds to Settings
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="loadCurrentThresholds">
                        <i class="fas fa-sync me-2"></i>Load Current Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    private string GetDefaultColor(int level, int maxLevel)
    {
        // Generate default colors from green to red based on risk level
        var colors = new string[5] { "28a745", "ffc107", "fd7e14", "dc3545", "6f42c1" };
        var index = Math.Min(level - 1, colors.Length - 1);
        return colors[index];
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const matrixId = @Model.Id;
            const matrixSize = @Model.MatrixSize;
            const matrixType = @((int)Model.MatrixType);
            const is3D = matrixType === 2;

            // Save Level Configuration
            document.getElementById('saveLevels').addEventListener('click', function() {
                const levels = [];
                
                // Validate that we have level configurations to save
                const levelConfigs = document.querySelectorAll('.level-config');
                if (levelConfigs.length === 0) {
                    showAlert('No levels found to save. Please configure levels first.', 'warning');
                    return;
                }
                
                document.querySelectorAll('.level-config').forEach(function(levelDiv) {
                    const levelType = levelDiv.getAttribute('data-level-type');
                    const originalLevelValue = parseInt(levelDiv.getAttribute('data-level-value'));
                    const levelNameElement = levelDiv.querySelector('.level-name');
                    const levelScoreElement = levelDiv.querySelector('.level-score');
                    const levelColorElement = levelDiv.querySelector('.level-color');
                    
                    if (!levelNameElement || !levelScoreElement || !levelColorElement) {
                        console.warn('Missing level input elements', levelDiv);
                        return; // Skip this level
                    }
                    
                    const levelName = levelNameElement.value;
                    const levelScore = parseFloat(levelScoreElement.value) || originalLevelValue;
                    const levelColor = levelColorElement.value;
                    
                    // Validate required fields
                    if (!levelName || !levelName.trim()) {
                        showAlert(`Level name is required for ${levelType} Level ${originalLevelValue}`, 'danger');
                        return;
                    }
                    
                    if (levelScore <= 0) {
                        showAlert(`Level score must be greater than 0 for ${levelType} Level ${originalLevelValue}`, 'danger');
                        return;
                    }
                    
                    // Convert string level type to enum value
                    let levelTypeEnum;
                    switch(levelType) {
                        case 'Impact': levelTypeEnum = 1; break;
                        case 'Likelihood': levelTypeEnum = 2; break;
                        case 'Exposure': levelTypeEnum = 3; break;
                        default: levelTypeEnum = 1; // Default to Impact
                    }
                    
                    levels.push({
                        LevelType: levelTypeEnum,
                        LevelValue: levelScore, // Use the configured score instead of original level
                        LevelName: levelName.trim(),
                        ColorCode: levelColor.startsWith('#') ? levelColor.substring(1) : levelColor, // Remove # if present
                        Multiplier: levelScore, // For exposure, this will be the multiplier; for others, same as LevelValue
                        RiskMatrixId: matrixId // Ensure this is set
                    });
                });
                
                // Final validation
                if (levels.length === 0) {
                    showAlert('No valid levels to save. Please check your level configurations.', 'warning');
                    return;
                }

                const tokenElement = document.querySelector('#levelsForm input[name="__RequestVerificationToken"]');
                if (!tokenElement) {
                    showAlert('Security token not found. Please refresh the page and try again.', 'danger');
                    return;
                }
                const token = tokenElement.value;
                
                fetch(`/RiskMatrix/SaveLevels/${matrixId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(levels)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('Level configuration saved successfully!', 'success');
                    } else {
                        showAlert('Error saving configuration: ' + data.message, 'danger');
                    }
                })
                .catch(error => {
                    showAlert('Error saving configuration: ' + error.message, 'danger');
                });
            });

            // Generate Matrix
            document.getElementById('generateMatrix').addEventListener('click', function() {
                fetch(`/RiskMatrix/GenerateMatrix/${matrixId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('Risk matrix generated successfully!', 'success');
                        previewMatrix();
                    } else {
                        showAlert('Error generating matrix: ' + data.message, 'danger');
                    }
                })
                .catch(error => {
                    showAlert('Error generating matrix: ' + error.message, 'danger');
                });
            });

            // Preview Matrix
            document.getElementById('previewMatrix').addEventListener('click', previewMatrix);

            // Add event listener for exposure level selector (if it exists)
            const exposureSelector = document.getElementById('exposureSelector');
            if (exposureSelector) {
                exposureSelector.addEventListener('change', function() {
                    // Refresh the matrix preview when exposure level changes
                    previewMatrix();
                });
            }

            // Load Current Risk Level Settings
            async function loadCurrentThresholds() {
                try {
                    const response = await fetch('/RiskLevelSettings/GetActiveSettings');
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    const settings = await response.json();
                    
                    if (settings) {
                        const mediumElement = document.getElementById('mediumThreshold');
                        const highElement = document.getElementById('highThreshold');
                        const criticalElement = document.getElementById('criticalThreshold');
                        const appetiteElement = document.getElementById('riskAppetiteThreshold');
                        
                        if (mediumElement) mediumElement.value = settings.qualitativeMediumThreshold || 4;
                        if (highElement) highElement.value = settings.qualitativeHighThreshold || 10;
                        if (criticalElement) criticalElement.value = settings.qualitativeCriticalThreshold || 16;
                        if (appetiteElement) appetiteElement.value = settings.riskAppetiteThreshold || 6;
                        
                        showAlert('Current risk level settings loaded successfully!', 'info');
                    } else {
                        showAlert('No risk level settings found. Using default values.', 'warning');
                    }
                } catch (error) {
                    console.error('Error loading current settings:', error);
                    showAlert('Error loading current settings: ' + error.message, 'warning');
                }
            }

            // Save Risk Thresholds to RiskLevelSettings
            document.getElementById('saveThresholds').addEventListener('click', function() {
                const mediumElement = document.getElementById('mediumThreshold');
                const highElement = document.getElementById('highThreshold');
                const criticalElement = document.getElementById('criticalThreshold');
                const appetiteElement = document.getElementById('riskAppetiteThreshold');
                
                if (!mediumElement || !highElement || !criticalElement || !appetiteElement) {
                    showAlert('Error: Could not find all threshold input fields. Please refresh the page.', 'danger');
                    return;
                }
                
                const settings = {
                    QualitativeMediumThreshold: parseFloat(mediumElement.value) || 4,
                    QualitativeHighThreshold: parseFloat(highElement.value) || 10,
                    QualitativeCriticalThreshold: parseFloat(criticalElement.value) || 16,
                    RiskAppetiteThreshold: parseFloat(appetiteElement.value) || 6
                };

                const token = document.querySelector('#thresholdsForm input[name="__RequestVerificationToken"]').value;

                fetch('/RiskLevelSettings/UpdateSettings', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(settings)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('Risk level settings saved successfully! All assessments will use the new thresholds.', 'success');
                        // Refresh matrix preview with new thresholds
                        previewMatrix();
                    } else {
                        showAlert('Error saving settings: ' + data.message, 'danger');
                    }
                })
                .catch(error => {
                    showAlert('Error saving settings: ' + error.message, 'danger');
                });
            });

            // Load Current Settings button
            document.getElementById('loadCurrentThresholds').addEventListener('click', loadCurrentThresholds);

            // Reset Levels
            document.getElementById('resetLevels').addEventListener('click', function() {
                if (confirm('Are you sure you want to reset all levels to default values?')) {
                    location.reload();
                }
            });

            // Preview Matrix Function
            function previewMatrix() {
                console.log('Starting matrix preview...');
                const previewDiv = document.getElementById('matrixPreview');
                
                if (!previewDiv) {
                    console.error('Matrix preview container not found');
                    return;
                }
                
                // Show loading indicator
                previewDiv.innerHTML = `
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading matrix preview...</p>
                    </div>
                `;
                
                fetch(`/RiskMatrix/GetMatrixData/${matrixId}`)
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Matrix data received:', data);
                    if (data.success) {
                        renderMatrixPreview(data.matrix, data.levels, data.cells);
                    } else {
                        console.error('API returned error:', data.message);
                        previewDiv.innerHTML = `<div class="alert alert-warning">Error loading matrix data: ${data.message || 'Unknown error'}</div>`;
                    }
                })
                .catch(error => {
                    console.error('Error loading matrix data:', error);
                    previewDiv.innerHTML = `<div class="alert alert-danger">Error loading matrix data: ${error.message}</div>`;
                });
            }

            // Render Matrix Preview
            function renderMatrixPreview(matrix, levels, cells) {
                console.log('Rendering matrix preview:', { matrix, levels, cells });
                const previewDiv = document.getElementById('matrixPreview');
                
                if (!levels || levels.length === 0) {
                    renderDefaultPreview(matrix);
                    return;
                }

                if (!cells || cells.length === 0) {
                    previewDiv.innerHTML = '<div class="alert alert-info">No matrix cells generated yet. Click "Generate Risk Matrix" to create the matrix cells.</div>';
                    return;
                }
                
                const likelihoodLevels = levels.filter(l => l.levelType === 'Likelihood').sort((a, b) => a.levelValue - b.levelValue);
                const impactLevels = levels.filter(l => l.levelType === 'Impact').sort((a, b) => b.levelValue - a.levelValue);
                
                console.log('Likelihood levels:', likelihoodLevels);
                console.log('Impact levels:', impactLevels);
                
                if (likelihoodLevels.length === 0) {
                    previewDiv.innerHTML = '<div class="alert alert-warning">No likelihood levels found. Please configure levels first.</div>';
                    return;
                }
                
                if (impactLevels.length === 0) {
                    previewDiv.innerHTML = '<div class="alert alert-warning">No impact levels found. Please configure levels first.</div>';
                    return;
                }
                
                // Create simplified matrix table structure
                let html = `
                    <div class="matrix-container">
                        <table class="risk-matrix-table">
                            <thead>
                                <tr>
                                    <th class="corner-cell">Impact \\ Likelihood</th>`;
                
                // Add likelihood headers
                likelihoodLevels.forEach(level => {
                    html += `<th class="likelihood-header">${level.levelName}</th>`;
                });
                
                html += `
                                </tr>
                            </thead>
                            <tbody>`;
                
                // Get selected exposure level for 3D matrices
                const selectedExposureLevel = is3D ? 
                    (document.getElementById('exposureSelector')?.value ? 
                        parseInt(document.getElementById('exposureSelector').value) : 1) : null;
                
                // Create table rows for each impact level
                impactLevels.forEach(impactLevel => {
                    html += `<tr><td class="impact-header">${impactLevel.levelName}</td>`;
                    
                    likelihoodLevels.forEach(likelihoodLevel => {
                        const cell = cells.find(c => 
                            c.impactLevel === impactLevel.levelValue && 
                            c.likelihoodLevel === likelihoodLevel.levelValue && 
                            (!is3D || c.exposureLevel === selectedExposureLevel)
                        );
                        
                        if (cell) {
                            const riskLevel = getRiskLevelFromScore(cell.riskScore);
                            const cellClass = getMatrixCellClass(riskLevel);
                            const exposureText = is3D ? ` × Exposure Level ${selectedExposureLevel}` : '';
                            const tooltip = `${impactLevel.levelName} Impact × ${likelihoodLevel.levelName} Likelihood${exposureText} = ${riskLevel} Risk (Score: ${cell.riskScore})`;
                            
                            html += `
                                <td class="matrix-cell ${cellClass}" 
                                    title="${tooltip}"
                                    data-impact="${impactLevel.levelValue}" 
                                    data-likelihood="${likelihoodLevel.levelValue}"
                                    data-exposure="${selectedExposureLevel || ''}"
                                    data-score="${cell.riskScore}">
                                    <div class="cell-score">${cell.riskScore}</div>
                                    <div class="cell-risk">${riskLevel}</div>
                                </td>`;
                        } else {
                            html += `
                                <td class="matrix-cell matrix-none" 
                                    title="${impactLevel.levelName} Impact × ${likelihoodLevel.levelName} Likelihood = No Data">
                                    <div class="cell-score">-</div>
                                    <div class="cell-risk">No Data</div>
                                </td>`;
                        }
                    });
                    html += '</tr>';
                });
                
                html += `
                            </tbody>
                        </table>
                    </div>`;
                
                // Add legend
                html += `
                    
                    <!-- Legend -->
                    <div class="heatmap-legend mt-3">
                        <strong>Risk Level Legend:</strong>
                        <span class="legend-item">
                            <span class="legend-color bg-success"></span> Low
                        </span>
                        <span class="legend-item">
                            <span class="legend-color bg-info"></span> Medium
                        </span>
                        <span class="legend-item">
                            <span class="legend-color bg-warning"></span> High
                        </span>
                        <span class="legend-item">
                            <span class="legend-color bg-danger"></span> Critical
                        </span>
                    </div>`;
                
                if (is3D) {
                    const exposureLevelName = levels.find(l => l.levelType === 'Exposure' && l.levelValue === selectedExposureLevel)?.levelName || `Level ${selectedExposureLevel}`;
                    html += `<p class="text-muted mt-2"><small><i class="fas fa-info-circle me-1"></i>This preview shows the 3D matrix using exposure level: <strong>${exposureLevelName}</strong>. Use the selector above to view different exposure levels.</small></p>`;
                }
                
                previewDiv.innerHTML = html;
            }

            // Helper Functions
            function getRiskLevelFromScore(score) {
                const mediumElement = document.getElementById('mediumThreshold');
                const highElement = document.getElementById('highThreshold');
                const criticalElement = document.getElementById('criticalThreshold');
                
                // Use default values if elements don't exist or are null
                const medium = mediumElement ? parseFloat(mediumElement.value) : 4;
                const high = highElement ? parseFloat(highElement.value) : 10;
                const critical = criticalElement ? parseFloat(criticalElement.value) : 16;
                
                if (score >= critical) return 'Critical';
                if (score >= high) return 'High';
                if (score >= medium) return 'Medium';
                return 'Low';
            }

            function getRiskLevelColor(level) {
                switch (level) {
                    case 'Low': return '#28a745';
                    case 'Medium': return '#ffc107';
                    case 'High': return '#fd7e14';
                    case 'Critical': return '#dc3545';
                    default: return '#6c757d';
                }
            }

            function getHeatmapCellClass(riskLevel) {
                switch (riskLevel) {
                    case 'Critical': return 'cell-critical';
                    case 'High': return 'cell-high';
                    case 'Medium': return 'cell-medium';
                    case 'Low': return 'cell-low';
                    default: return 'cell-none';
                }
            }

            function getMatrixCellClass(riskLevel) {
                switch (riskLevel) {
                    case 'Critical': return 'matrix-critical';
                    case 'High': return 'matrix-high';
                    case 'Medium': return 'matrix-medium';
                    case 'Low': return 'matrix-low';
                    default: return 'matrix-none';
                }
            }

            function renderDefaultPreview(matrix) {
                const previewDiv = document.getElementById('matrixPreview');
                const size = matrix.matrixSize || 5;
                
                // Create default level names
                const defaultImpactLevels = [];
                const defaultLikelihoodLevels = [];
                
                for (let i = size; i >= 1; i--) {
                    defaultImpactLevels.push({
                        levelValue: i,
                        levelName: `Impact ${i}`
                    });
                }
                
                for (let i = 1; i <= size; i++) {
                    defaultLikelihoodLevels.push({
                        levelValue: i,
                        levelName: `Likelihood ${i}`
                    });
                }
                
                // Generate default cells
                const defaultCells = [];
                for (let impact = 1; impact <= size; impact++) {
                    for (let likelihood = 1; likelihood <= size; likelihood++) {
                        const riskScore = impact * likelihood;
                        const riskLevel = getRiskLevelFromScore(riskScore);
                        defaultCells.push({
                            impactLevel: impact,
                            likelihoodLevel: likelihood,
                            riskScore: riskScore,
                            riskLevel: riskLevel
                        });
                    }
                }
                
                // Create heatmap-style visualization
                let html = `
                    <div class="alert alert-info mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Preview Mode:</strong> This shows a default ${size}×${size} matrix. Configure levels and generate the matrix for customized preview.
                    </div>
                    <div class="risk-heatmap-container">
                        <div class="heatmap-grid">
                            <!-- Y-axis labels (Impact) -->
                            <div class="y-axis-label">
                                <div class="axis-title">Impact</div>
                                <div class="impact-labels">`;
                
                defaultImpactLevels.forEach(level => {
                    html += `<div class="impact-label">${level.levelName}</div>`;
                });
                
                html += `
                                </div>
                            </div>
                            
                            <!-- Heatmap cells -->
                            <div class="heatmap-cells">`;
                
                defaultImpactLevels.forEach(impactLevel => {
                    html += '<div class="heatmap-row">';
                    
                    defaultLikelihoodLevels.forEach(likelihoodLevel => {
                        const cell = defaultCells.find(c => 
                            c.impactLevel === impactLevel.levelValue && 
                            c.likelihoodLevel === likelihoodLevel.levelValue
                        );
                        
                        if (cell) {
                            const cellClass = getHeatmapCellClass(cell.riskLevel);
                            html += `
                                <div class="heatmap-cell ${cellClass}" 
                                     title="${impactLevel.levelName} × ${likelihoodLevel.levelName} = ${cell.riskLevel} Risk (Score: ${cell.riskScore})"
                                     data-impact="${impactLevel.levelValue}" 
                                     data-likelihood="${likelihoodLevel.levelValue}"
                                     data-score="${cell.riskScore}">
                                    <div class="cell-content">
                                        <div class="risk-count">${cell.riskScore}</div>
                                        <div class="risk-level-text">${cell.riskLevel}</div>
                                    </div>
                                </div>`;
                        }
                    });
                    html += '</div>';
                });
                
                html += `
                            </div>
                        </div>
                        
                        <!-- X-axis labels (Likelihood) -->
                        <div class="x-axis-labels">`;
                
                defaultLikelihoodLevels.forEach(level => {
                    html += `<div class="likelihood-label">${level.levelName}</div>`;
                });
                
                html += `
                        </div>
                        <div class="x-axis-title">Likelihood</div>
                    </div>
                    
                    <!-- Legend -->
                    <div class="heatmap-legend mt-3">
                        <strong>Risk Level Legend:</strong>
                        <span class="legend-item">
                            <span class="legend-color bg-success"></span> Low
                        </span>
                        <span class="legend-item">
                            <span class="legend-color bg-info"></span> Medium
                        </span>
                        <span class="legend-item">
                            <span class="legend-color bg-warning"></span> High
                        </span>
                        <span class="legend-item">
                            <span class="legend-color bg-danger"></span> Critical
                        </span>
                    </div>`;
                
                previewDiv.innerHTML = html;
            }

            function showAlert(message, type) {
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; max-width: 400px;';
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(alertDiv);
                
                setTimeout(() => {
                    alertDiv.remove();
                }, 5000);
            }

            // Load current settings and then preview matrix
            loadCurrentThresholds().then(() => {
                // Wait a bit for the DOM to update, then preview
                setTimeout(previewMatrix, 100);
            }).catch(() => {
                // If loading settings fails, still try to preview with defaults
                console.warn('Failed to load current settings, using defaults');
                previewMatrix();
            });
        });
